{
	"name": "pr-stacker",
	"version": "0.0.1",
	"private": true,
	"description": "PR Stack bot for folding stacks of PRs on Github",
	"author": "EngineeredDev",
	"license": "ISC",
	"homepage": "https://github.com/EngineeredDev/pr-stacker",
	"keywords": ["probot", "github", "probot-app"],
	"packageManager": "npm@10.9.2",
	"scripts": {
		"start": "concurrently \"npm run build:watch\" \"npm run probot:watch\"",
		"build": "tsc",
		"build:watch": "tsc --watch",
		"lint:fix": "biome check --write",
		"lint": "concurrently \"biome check\" \"tsc --noEmit\"",
		"probot:watch": "nodemon --watch lib --ext js --exec \"probot run ./lib/index.js\"",
		"start:prod": "LOG_LEVEL=info node ./lib/server.js"
	},
	"dependencies": {
		"express": "^5.1.0",
		"graphology": "^0.26.0",
		"graphology-dag": "^0.4.1",
		"graphology-traversal": "^0.3.1",
		"probot": "^13.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^24.9.2",
		"concurrently": "^9.2.1",
		"graphology-types": "^0.24.8",
		"nock": "^14.0.0-beta.5",
		"nodemon": "^3.1.10",
		"smee-client": "^4.4.1",
		"typescript": "^5.9.3",
		"vitest": "^1.3.1"
	},
	"engines": {
		"node": ">= 18"
	},
	"type": "module"
}
